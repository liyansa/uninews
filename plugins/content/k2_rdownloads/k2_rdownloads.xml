  <authorUrl>http://www.jasonbrennan.com</authorUrl>
  <version>1.0.0</version>
  <description>Ask users to regirster before downloading K2 Attatchments</description>
  <files>
    <filename plugin="k2_rdownloads">k2_rdownloads.php</filename>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="enabled" type="radio" default="1" label="Enable K2 Register to Download">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </field>
      </fieldset>
    </fields>
  </config>
